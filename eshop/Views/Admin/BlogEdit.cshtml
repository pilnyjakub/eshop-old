@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    form{
        margin: 10px 10px;
        gap: 5px;
        width: 50%;
    }
</style>

@model BlogViewModel
<div class="d-flex justify-content-center mt-3">
    <form asp-action="BlogEdit" enctype="multipart/form-data" class="d-flex flex-column">
        <div class="form-group">
            <label asp-for="Blog.Name">Name</label>
            <input asp-for="Blog.Name" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Blog.Author">Author</label>
            <input asp-for="Blog.Author" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Blog.Content">Content</label>
            <input asp-for="Blog.Content" class="form-control" required/>
        </div>
        <div class="form-group d-flex align-items-center gap-2">
            <input asp-for="Image" class="form-control" type="file" />
            @if(ViewBag.Image != "")
            {
                <img src="~/blogs/@ViewBag.Image" height=50 />
            }
        </div>        
        <input type="hidden" asp-for="Blog.Id" />
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>