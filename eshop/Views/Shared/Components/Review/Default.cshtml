@model Review

<div class="mt-3">
    <h5>Add Review</h5>
    <form asp-action="AddReview" asp-controller="Account" class="d-flex align-items-center gap-2">
        <textarea asp-for="Text" required></textarea>
        <input type="number" min=1 max=5 step=1 asp-for="Rating" placeholder=1 required />
        <button type="submit">Add Review</button>
        <input type="hidden" asp-for="IdProduct" value="@ViewBag.Id" />
    </form>
</div>