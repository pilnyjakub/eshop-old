<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="top">
            <div class="socials">
                Follow Us:
                <a target="_blank" href="https://facebook.com"><i class="bi bi-facebook"></i></a>
                <a target="_blank" href="https://twitter.com"><i class="bi bi-twitter"></i></a>
                <a target="_blank" href="https://instagram.com"><i class="bi bi-instagram"></i></a>
                <a target="_blank" href="https://youtube.com"><i class="bi bi-youtube"></i></a>
            </div>
            <div class="settings">
                <div class="dropdown">
                    <button class="btn bg-transparent border-0 dropdown-toggle" data-toggle="dropdown">
                        My Account
                    </button>
                    <div class="dropdown-menu">
                        @if (ViewBag.Login == null)
                        {
                            <a class="dropdown-item" asp-controller="Account" asp-action="Index">Login</a>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Register">Register</a>
                        }
                        else
                        {
                            if (ViewBag.Login == "admin@admin.com")
                            {
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admin</a>
                            }
                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Log Out</a>
                        }

                    </div>
                </div>
                <div class="vr"></div>
                <div class="dropdown">
                    <button class="btn bg-transparent border-0 dropdown-toggle" data-toggle="dropdown">
                        USD
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="" asp-action="">EUR</a>
                        <a class="dropdown-item" asp-controller="" asp-action="">GBP</a>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="middle">
            <a asp-controller="Home" asp-action="Index"><img src="~/css/debra-logo.png" alt="Debra Shop" /></a>
            <div class="input-group">
                <input class="form-control border-0" type="search" placeholder="Search out store" />
                <span class="input-group-text border-0"><i class="bi bi-search"></i></span>
            </div>
            <a class="cart-link" asp-controller="Checkout" asp-action="Index">
            <div class="cart">
                <i class="bi bi-cart2"></i>
                <div class="items">0</div>
            </div>
            </a>
        </div>
    </header>
    <nav>
        <a class="btn" asp-controller="Home" asp-action="Index">Home</a>
        <div class="dropdown">
            <button class="btn bg-transparent border-0 dropdown-toggle" data-toggle="dropdown">
                Shop
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-controller="Products" asp-action="Index">Shop</a>
                <a class="dropdown-item" asp-controller="Products" asp-action="Index">Shop</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="btn bg-transparent border-0 dropdown-toggle" data-toggle="dropdown">
                Products
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-controller="Products" asp-action="Index">Products</a>
                <a class="dropdown-item" asp-controller="Products" asp-action="Index">Products</a>
            </div>
        </div>
        <a class="btn" asp-controller="Blogs" asp-action="Index">Blog</a>
        <a class="btn" asp-controller="Home" asp-action="About">About</a>
        <a class="btn" asp-controller="Home" asp-action="Contact">Contact</a>
    </nav>
    <main role="main">
        @RenderBody()
    </main>
    <footer>
        <div class="d-flex flex-row justify-content-between align-items-baseline mt-5 mb-4">
            <div class="address">
                <img src="~/css/debra-logo-black.png" alt="Debra Shop" />
                <h5>Address:</h5>
                4710-4890 Breckinridge St, UK Burlington, VT 05401

                <h5>Need Help?</h5>
                Call: 123 456 789

                <h5>Email:</h5>
                info@demo.com
            </div>
            <div class="links">
                <h5>About US</h5>
                <a asp-controller="Home" asp-action="About">About us</a>
                <a asp-controller="Home" asp-action="Contact">Store location</a>
                <a asp-controller="Home" asp-action="Contact">Contact</a>
                <a asp-controller="Home" asp-action="ShippingPolicy">Orders tracking</a>
            </div>
            <div class="links">
                <h5>Usefull Links</h5>
                <a asp-controller="Home" asp-action="ShippingPolicy">Returns</a>
                <a asp-controller="Home" asp-action="ShippingPolicy">Support Policy</a>
                <a asp-controller="Home" asp-action="SizeChart">Size guide</a>
                <a asp-controller="" asp-action="">FAQs</a>
            </div>
            <div class="links">
                <h5>Latest Blogs</h5>
                @foreach(var bottomBlog in ViewBag.BottomBlogs)
                {
                    <a asp-controller="Blogs" asp-action="Detail" asp-route-id="@bottomBlog.Id">
                        <div class="d-flex bottom-blog mb-4">
                            <img src="~/blogs/@bottomBlog.Image" />
                            <div>
                                <p>@bottomBlog.Name</p>
                                <p><span class="text-muted">by </span>@bottomBlog.Author</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
        <div class="text-muted">
            <hr />
            <div class="copyright">
            <p>Copyright © 2021</p>
                <div class="socials">
                    <a target="_blank" href="https://facebook.com"><i class="bi bi-facebook"></i></a>
                    <a target="_blank" href="https://twitter.com"><i class="bi bi-twitter"></i></a>
                    <a target="_blank" href="https://instagram.com"><i class="bi bi-instagram"></i></a>
                    <a target="_blank" href="https://youtube.com"><i class="bi bi-youtube"></i></a>
                </div>
            </div>
        </div>
    </footer>    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
