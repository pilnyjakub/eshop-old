@{
    ViewData["Title"] = "Products";
}

<style>
    .sidepanel{
        background: #F8F8F8;
        min-width: 262px;
        padding: 20px;
        flex: auto;
    }
    .sidepanel p {
        margin: 5px 0;
    }
    .form-check-input:checked{
        background: #FE989A;
        color: #FE989A;
    }
    .box{
        border: 1px solid #DDDDDD;
    }
</style>

<vc:navigation></vc:navigation>

<div class="d-flex gap-4 mt-5">
    <div class="d-flex flex-column" style="flex: auto;">
        <div class="box mb-3 d-flex justify-content-between" style="padding: 15px">
            <div class="d-flex align-items-center">
                <i class="bi bi-grid-3x3-gap-fill"></i>
                <i class="bi bi-list"></i>
            </div>
            <span class="d-flex align-items-center">Showing 1 - 9 of @ViewBag.Products.Count result</span>
            <div class="d-flex align-items-center">
                <span style="white-space:nowrap;">Show:</span>
                <select class="form-select" style="border: none">
                    <option>3</option>
                    <option>6</option>
                    <option selected>9</option>
                    <option>12</option>
                    <option>15</option>
                    <option>18</option>
                    <option>21</option>
                </select>
            </div>
            <div class="d-flex align-items-center">
                <span style="white-space:nowrap;">Sort by:</span>
                <select class="form-select" style="border: none">
                    <option selected>Newest</option>
                    <option>Best Selling</option>
                    <option>Featured</option>
                </select>
            </div>
        </div>
        <div class="grid">
            <div class="row row-cols-3 justify-content-center" style="row-gap: 20px;">
                @foreach(var product in ViewBag.Products)
                {
                    <vc:product product="product"></vc:product>
                }
            </div>
        </div>
    </div>
    <div class="sidepanel">
        <h5>Search</h5>
        <div class="input-group" style="border-radius: 0">
            <input style="border-radius: 0" class="form-control" type="search" placeholder="Search our store"/>
            <span style="border-radius: 0; background: white;" class="input-group-text">Search</span>
        </div>
        <h5 class="mt-5">Categories</h5>
        <p>Best Sellers</p>
        <p>New Arrivals</p>
        <p>Sale Items</p>
        <p>Top Sell</p>
        <hr />
        @model List<string>
        <form asp-action="Index">
        <h5>Vendors</h5>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="vendor1" name="categories" value="Vendor1">
            <label class="form-check-label" for="vendor1">Vendor 1</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="vendor10" name="categories" value="vendor10">
            <label class="form-check-label" for="vendor10">Vendor 10</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="vendor11" name="categories" value="Vendor11">
            <label class="form-check-label" for="vendor11">Vendor 11</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="vendor12" name="categories" value="Vendor12">
            <label class="form-check-label" for="vendor12">Vendor 12</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="vendor2" name="categories" value="Vendor2">
            <label class="form-check-label" for="vendor2">Vendor 2</label>
        </div>
        <hr />
        <h5>Color</h5>
        <div class="grid" style="margin-left: 10px">
            <div class="row row-cols-2 justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="red" name="categories" value="Red">
                    <label class="form-check-label" for="red">Red</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="green" name="categories" value="Green">
                    <label class="form-check-label" for="green">Green</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="blue" name="categories" value="Blue">
                    <label class="form-check-label" for="blue">Blue</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="yellow" name="categories" value="Yellow">
                    <label class="form-check-label" for="yellow">Yellow</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="white" name="categories" value="White">
                    <label class="form-check-label" for="white">White</label>
                </div>
            </div>
        </div>
        <hr />
        <h5>Size</h5>
        <div class="grid" style="margin-left: 10px">
            <div class="row row-cols-2 justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="s" name="categories" value="S">
                    <label class="form-check-label" for="s">S</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="m" name="categories" value="M">
                    <label class="form-check-label" for="m">M</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="l" name="categories" value="L">
                    <label class="form-check-label" for="l">L</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="xl" name="categories" value="XL">
                    <label class="form-check-label" for="xl">Xl</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="xll" name="categories" value="XLL">
                    <label class="form-check-label" for="xll">Xll</label>
                </div>
            </div>
        </div>
        <hr />
        <h5>Tags</h5>
        <div class="grid" style="margin-left: 10px">
            <div class="row row-cols-2 justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="black" name="categories" value="Black">
                    <label class="form-check-label" for="black">Black</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="fiber" name="categories" value="Fiber">
                    <label class="form-check-label" for="fiber">Fiber</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gold" name="categories" value="Gold">
                    <label class="form-check-label" for="gold">Gold</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gray" name="categories" value="Gray">
                    <label class="form-check-label" for="gray">Gray</label>
                </div>
            </div>
        </div>
        <button class="btn btn-dark" type="submit">Filter</button>
        </form>
    </div>
</div>