@{
    ViewData["Title"] = "Shipping";
    Layout = "~/Views/Shared/_Checkout.cshtml";
}

@model Order

<style>
    .form-control {
        width: 100%;
        height: 48px;
        margin: 5px 0;
    }
    .btn {
        background: #FE989A;
        width: 183px;
        height: 60px;
    }
    .form-check-input:checked{
        background: #FE989A;
    }
    .box{
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        padding: 10px
    }
    form {
        width: 100%;
    }
</style>

<div>
    <a asp-controller="Home" asp-action="Index"><img src="~/css/debra-logo-black.png" alt="Debra Shop" /></a>
    <div class="mb-3">
        <p><span>Information</span> > <span>Shipping</span> > <span class="text-muted">Payment</span></p>
    </div>
    <div class="box">
        <div class="d-flex">
            <span class="text-muted" style="flex: 1;">Contact</span><span style="flex: 6;">@ViewBag.Order.Email</span>
        </div>
        <hr />
        <div class="d-flex">
             <span class="text-muted" style="flex: 1;">Ship to</span> <p style="flex: 6; margin: 0;">@ViewBag.Order.Address, @ViewBag.Order.City, @ViewBag.Order.Country</p>
        </div>
    </div>
    <h5 class="mt-5">Shipping method</h5>
    <div class="d-flex align-items-baseline">
        <form asp-action="Shipping">
            <div class="d-flex box">
            <div class="form-check" style="flex: 1;">
                <input class="form-check-input" asp-for="Shipping" type="radio" value="Standart" id="shipping" checked />
                <label class="form-check-label" for="shipping">Standart</label>    
            </div>
            <span class="font-weight-bold">Free</span>
        </div>
        <div class="d-flex align-items-center gap-3">
            <button class="btn mt-3" type="submit">Continue to payment</button>
            <a asp-action="Information" class="mt-3" style="color: #FE989A; text-decoration: none;">Return to information</a>
        </div>
        </form>
    </div>
</div>