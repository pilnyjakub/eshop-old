@{
    ViewData["Title"] = "Information";
    Layout = "~/Views/Shared/_Checkout.cshtml";
}

@model Order

<style>
    .form-control {
        width: 100%;
        height: 48px;
        margin: 5px 0;
    }
    .btn {
        background: #FE989A;
        width: 183px;
        height: 60px;
    }
    .form-check-input:checked{
        background: #FE989A;
    }
</style>

<div>
    <a asp-controller="Home" asp-action="Index"><img src="~/css/debra-logo-black.png" alt="Debra Shop" /></a>
    <div class="mb-3">
        <p><span>Information</span> > <span class="text-muted">Shipping</span> > <span class="text-muted">Payment</span></p>
    </div>
    <form class="d-flex flex-column" asp-action="Information">
        <h5 class="mt-3">Contact information</h5>
        <input class="form-control" type="email" asp-for="Email" placeholder="Email" required/>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">Email me with news and offers</label>
        </div>
        <h5 class="mt-5">Shipping address</h5>
        <select class="form-control" asp-for="Country">
            <option value="Austria">Austria</option>
            <option value="Czechia">Czechia</option>
            <option value="Germany">Germany</option>
            <option value="Poland">Poland</option>
            <option value="Slovakia">Slovakia</option>
        </select>
        <div class="d-flex gap-3">
            <input class="form-control" type="text" asp-for="FirstName" placeholder="First name (optional)" />
            <input class="form-control" type="text" asp-for="LastName" placeholder="Last name"  required/>
        </div>
        <input class="form-control" type="text" asp-for="Address" placeholder="Address"  required/>
        <input class="form-control" type="text" asp-for="Appartment" placeholder="Appartment, suite, etc. (optional)"  />
        <div class="d-flex gap-3">
            <input class="form-control" type="text" asp-for="PostalCode" placeholder="Postal code"  required/>
            <input class="form-control" type="text" asp-for="City" placeholder="City"  required/>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">Save this information for next time</label>
        </div>
        <div class="d-flex align-items-center gap-3">
            <button class="btn mt-3" type="submit">Continue to shipping</button>
            <a asp-action="Index" class="mt-3" style="color: #FE989A; text-decoration: none;">Return to cart</a>
        </div>
    </form>
</div>