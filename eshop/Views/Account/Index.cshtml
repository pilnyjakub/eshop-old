@{
    ViewData["Title"] = "Account";
}

@model LoginViewModel

<style>
    form {
        padding: 30px;
        background: white;
        width: 475px;
        height: 270px;
        box-shadow: 0 5px 4px 0 rgb(0 0 0 / 10%);
    }
    form .form-control{
        border-radius: 0;
    }

    form .form-group {
        margin: 0 0 20px 0;
    }

    form a {
        color: black;
        text-decoration: none;
    }

    form .btn {
        border-radius: 0;
        padding: 8px 25px;
    }

    .login-form-container{
        background: #F3F3F3;
        width: 555px;
        height: 435px;
        margin: 60px 0 100px 0;
    }

</style>

<vc:navigation></vc:navigation>

<div class="d-flex justify-content-center flex-column text-center align-self-center login-form-container">
    <div class="d-flex justify-content-center flex-column align-self-center">
        <h2>Login</h2>
        <p>Please login using account detail bellow.</p>
        <form asp-action="Index" class="d-flex flex-column align-self-center">
            <div class="form-group d-flex">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" required/>
            </div>
            <div class="form-group d-flex">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required/>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-3">
                <button type="submit" class="btn btn-dark">Sign In</button>
                <a>Forgot your password?</a>
            </div>
            <div class="text-start mt-3">
                <a asp-controller="Account" asp-action="Register">Create account</a>
            </div>
            <input type="hidden" asp-for="Controller" />
            <input type="hidden" asp-for="Action" />
        </form>
    </div>
</div>